.sear {
  padding: 15rpx 18rpx;
  display: flex;
  justify-content: space-between;
}
.sear .searchinput {
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  float: left;
  background-color: #E7E7E7;
  font-size: 25rpx;
  color: #6C6C6C;
  width: 599rpx;
  height: 61rpx;
}
.sear .searchinput icon {
  margin: 0 15rpx;
}
.sear .searchinput input {
  width: 100%;
}
.sear .searchbtn {
  float: left;
  text-align: center;
  width: 101rpx;
  height: 61rpx;
  line-height: 61rpx;
  font-size: 25rpx;
  border-radius: 8rpx;
  color: #fff;
  background-color: #eb4450;
}
.goodslist {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.goodslist .goodsimg {
  flex: 2;
  display: flex;
  justify-content: center;
  align-content: center;
}
.goodslist .goodsimg .imgs {
  width: 70%;
}
.goodslist .goodsmain {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
}
.goodslist .goodsmain .onezi {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goodslist .goodsmain .twozi {
  color: #EA4350;
}
